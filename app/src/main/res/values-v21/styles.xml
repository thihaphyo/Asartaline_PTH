<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Transparent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="AppTheme.FoodCategoryIcons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tint">#757575</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:padding">@dimen/margin_medium_2</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/ripple</item>
    </style>
</resources>