<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium">

    <RelativeLayout
        android:id="@+id/rl_card_wartee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_wartee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:clickable="true"
            android:foreground="@drawable/ripple"
            app:cardElevation="@dimen/margin_small">

            <RelativeLayout
                android:id="@+id/rl_wartee_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_wartee_cover"
                    android:layout_width="105dp"
                    android:layout_height="122dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_tea" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_wartee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_toRightOf="@+id/iv_wartee_cover"
                    android:fontFamily="@font/popping_regular"
                    android:lineSpacingMultiplier="1.3"
                    android:text="လက်ဖက်ရည်"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/text_regular_2x" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_taste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_wartee_name"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_toRightOf="@+id/iv_wartee_cover"
                    android:fontFamily="@font/popping_regular"
                    android:lineSpacingMultiplier="1.3"
                    android:text="ပုံမှန်,ကျဆိမ့်"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_small"

                    />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_taste"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toRightOf="@+id/iv_wartee_cover"
                    android:fontFamily="@font/popping_regular"
                    android:lineSpacingMultiplier="1.3"
                    android:text="Cost 2000Ks - 3000Ks for one"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_small"

                    />

                <android.support.v7.widget.AppCompatRatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_price"
                    android:layout_below="@+id/tv_price"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_toRightOf="@id/iv_wartee_cover"
                    android:numStars="5"
                    android:rating="3.5"
                    android:theme="@style/RatingBar" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_rating"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_medium_3"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/corner"
            android:paddingBottom="@dimen/margin_medium"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_medium"
            android:text="3.8"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</FrameLayout>